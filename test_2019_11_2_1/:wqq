#include<stdio.h>
#include <unistd.h>
#include <stdlib.h>
#include <pthread.h>
#include <string.h>
void* rout(char* arg)
{
    while(1)
    {
        printf("I am thread\n");
        sleep(1);
    }
}
int main()
{
    pthread_t tid;
    int ret;
    char* ptr="hello world";
    ret=pthread_create(&tid,NULL,rout,(void*)ptr);
    if(ret!=0)
    {
        printf("pthread_create errno :%s\n",);
    }
    while(1)
    {
        printf("I am main thread\n");
        sleep(1);
    }
    return 0;
}
